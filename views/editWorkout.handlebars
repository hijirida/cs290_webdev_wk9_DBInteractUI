<h2>Edit the exercise and click "submit" to save changes</h2>

{{#each dataList}}

<form>
  <p hidden><input type="number" name=idindex value={{id}}> id# </p>
  <p><input type="text" name="name" value="{{name}}" required> Exercise Name (required)</p>
  <p><input type="number" min="0" name="reps" value={{reps}}> Reps (int only)</p>
  <p><input type="number" min="1" name="weight" value={{weight}}> Weight (int only)
    <p>
      {{#if lbs}}
        <input type="radio" value="lbs" name="wtChoice" checked> lbs
        <input type="radio" value="kg" name="wtChoice"> kg
      {{else}}
        <input type="radio" value="lbs" name="wtChoice"> lbs
        <input type="radio" value="kg" name="wtChoice" checked> kg
      {{/if}}
    </p>
  </p>
  <p><input type="date" name="date" value={{date}}> Date</p>
  <button type="submit">SUBMIT CHANGES</button>
</form>

{{/each}}

<script type="text/javascript" src="wk9JavaScriptEdit.js"></script>
